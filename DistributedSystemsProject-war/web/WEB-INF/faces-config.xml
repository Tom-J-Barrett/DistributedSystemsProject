<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">

    <navigation-rule>
        <from-view-id>index.xhtml</from-view-id>
	<navigation-case>
		<from-action>#{indexController.process1}</from-action>
		<from-outcome>SUCCESS</from-outcome>
		<to-view-id>/views/home_page.xhtml</to-view-id>
	</navigation-case>
        <navigation-case>
		<from-action>#{indexController.process1}</from-action>
		<from-outcome>NOT_LOGGED_IN</from-outcome>
		<to-view-id>/views/login.xhtml</to-view-id>
	</navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>views/login.xhtml</from-view-id>
	<navigation-case>
		<from-action>#{loginController.validateCredentials}</from-action>
		<from-outcome>SUCCESS</from-outcome>
		<to-view-id>/views/home_page.xhtml</to-view-id>
	</navigation-case>
        <navigation-case>
		<from-action>#{loginController.validateCredentials}</from-action>
		<from-outcome>NOT_LOGGED_IN</from-outcome>
		<to-view-id>/views/login.xhtml</to-view-id>
	</navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>views/product.xhtml</from-view-id>
	<navigation-case>
		<from-action>#{productController.addProductToCart}</from-action>
		<from-outcome>SUCCESS</from-outcome>
		<to-view-id>/views/home_page.xhtml</to-view-id>
	</navigation-case>
    </navigation-rule>
    
    
    <navigation-rule>
        <from-view-id>views/register.xhtml</from-view-id>
	<navigation-case>
		<from-action>#{registerPageController.validateInformation}</from-action>
		<from-outcome>LOGGED_IN</from-outcome>
		<to-view-id>/views/home_page.xhtml</to-view-id>
	</navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>home_page</from-outcome>
            <to-view-id>/views/home_page.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>cart_page</from-outcome>
            <to-view-id>/views/cart.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>profile_page</from-outcome>
            <to-view-id>/views/profile.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>products_page</from-outcome>
            <to-view-id>/views/product.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>view_items_page</from-outcome>
            <to-view-id>/views/display_items.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>browse_page</from-outcome>
            <to-view-id>/views/browse.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>display_items</from-outcome>
            <to-view-id>/views/display_items.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>register_page</from-outcome>
            <to-view-id>/views/register.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login_page</from-outcome>
            <to-view-id>/views/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>